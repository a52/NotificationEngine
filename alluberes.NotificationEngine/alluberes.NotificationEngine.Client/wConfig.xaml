        <Button x:Name="cmdClose" Content="Cerrar" Margin="433,0,15,12" Click="CmdClose_Click" Height="22" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Left" Margin="29,24,0,0" TextWrapping="Wrap" Text="Configuración" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="txtEmailUser" HorizontalAlignment="Left" Height="23" Margin="191,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="298"/>
        <TextBox x:Name="txtEmailServerPort" HorizontalAlignment="Left" Height="23" Margin="191,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtEmailServer" HorizontalAlignment="Left" Height="23" Margin="191,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="298"/>

    </Grid>
</Window>
