        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:alluberes.NotificationEngine.Client"
        mc:Ignorable="d"
        Title="wConfig" Height="355.509" Width="530.561">
    <Grid>
        <TabControl Margin="29,70,15,39">
            <TabItem Header="Email">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Servidor" HorizontalAlignment="Left" Margin="97,21,0,0" VerticalAlignment="Top" Height="26" Width="54"/>
                    <Label Content="Puerto" HorizontalAlignment="Left" Margin="106,47,0,0" VerticalAlignment="Top" Height="26" Width="45"/>
                    <Label Content="Usuario" HorizontalAlignment="Left" Margin="101,73,0,0" VerticalAlignment="Top" Height="26" Width="50"/>
                    <Label Content="Clave" HorizontalAlignment="Left" Margin="113,104,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
                    <CheckBox x:Name="cbEmailUserSSL" Content="Uso de Certificado" HorizontalAlignment="Left" Margin="156,136,0,0" VerticalAlignment="Top" Height="15" Width="118"/>
